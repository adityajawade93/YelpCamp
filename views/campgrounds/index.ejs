<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>Our Handpicked Campgrounds From All Over The World.</p>
            <p><a href="/campgrounds/new" class="btn btn-primary btn-lg">Add a new Campground</a></p>
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap:wrap">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
            <% campgrounds.forEach(function(campground){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.image %>"></img>
                        <div class="caption">
                        <h4><%= campground.name %></h4>
                        </div>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More Info</a>
                    </div>
                </div>
            <% }) %>
    </div>
</div>
<% include ../partials/footer%>
