<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align:center">Edit <%= campground.name %></h1>
        <div style="width:30%;margin:25px auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>"></input>
            </div>
            <div class="form-group">
                <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>"></input>
            </div>
            <div class="form-group">
                <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>"></input>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block"></input>
            </div>
        </form>
        <a href="/campgrounds">Go Back!</a>
        </div>
    </div>   
</div>

<% include ../partials/footer %>